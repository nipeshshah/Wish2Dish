@model IEnumerable<Wish2DishWeb.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gujarati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hindi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Weight)
        </th>
