
@{
  ViewBag.Title = "Purchase";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm())
{
  @Html.AntiForgeryToken()


  <div class="form-horizontal">
    <h2>Purchase</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
      @Html.Label("Product", htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.DropDownListFor(model                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              => m.Product.Name, null, htmlAttributes: new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.ReferredBy, "", new { @class = "text-danger" })*@
      </div>
    </div>
    <div class="form-group">
      @Html.Label("Batch", htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.DropDownList("Batches", null, htmlAttributes: new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.ReferredBy, "", new { @class = "text-danger" })*@
      </div>
    </div>

    <div class="form-group">
      @Html.Label("Cost", htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.TextBox("Cost", null, htmlAttributes: new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.ReferredBy, "", new { @class = "text-danger" })*@
      </div>
    </div>

    <div class="form-group">
      @Html.Label("MRP", htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.TextBox("MRP", null, htmlAttributes: new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.ReferredBy, "", new { @class = "text-danger" })*@
      </div>
    </div>
    
    <div class="form-group">
      @Html.Label("Stock", htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
        @Html.TextBox("Stock", null, htmlAttributes: new { @class = "form-control" })
        @*@Html.ValidationMessageFor(model => model.ReferredBy, "", new { @class = "text-danger" })*@
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Create" class="btn btn-default" />
    </div>
  </div>

}
