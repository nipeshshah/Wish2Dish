@model IEnumerable<Wish2DishWeb.Models.ProductBatch>

@{
  ViewBag.Title = "CreateHomePrintingList";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home Price List</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Product.Name)
    </th>
    <th style="text-align:right">
      In Stock
    </th>
    <th style="text-align:right">
      Per 100 Grams
    </th>
    <th style="text-align:right">
      Per 250 Grams
    </th>
    <th style="text-align:right">
      Per 500 Grams
    </th>
    <th style="text-align:right">
      Per 1 Kg
    </th>
  </tr>

  @foreach(var item in Model)
  {
  <tr>
    <td>
      @Html.DisplayFor(modelItem => item.Product.Name)
    </td>
    <td style="text-align:right">
      @String.Format("{0:#,0.000} Kg.", item.Stock.Value / item.Product.Weight.Value)
    </td>
    <td style="text-align:right">
      @String.Format("{0:#,0.00} Rs./100g", Math.Ceiling(item.MRP.Value / 10))
    </td>
    <td style="text-align:right">
      @String.Format("{0:#,0.00} Rs./250g", Math.Ceiling(item.MRP.Value / 4))
      
    </td>
    <td style="text-align:right">
      @String.Format("{0:#,0.00} Rs./500g", Math.Ceiling(item.MRP.Value / 2))
      
    </td>
    <td style="text-align:right">
      @String.Format("{0:#,0.00} Rs./Kg", Math.Ceiling(item.MRP.Value))
    </td>
  </tr>
  }

</table>
